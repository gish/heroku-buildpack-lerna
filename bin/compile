#!/usr/bin/env bash
set -e

arrow() {
    sed -u 's/^/-----> /'
}

indent() {
    sed -u 's/^/      /'
}

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"
STAGE="$(mktemp -d)"

if [ ! -f "${ENV_DIR}/APP_BASE" ]; then
    echo "APP_BASE was not set. Aborting" | indent
    exit 1
fi

APP_BASE="$(cat "${ENV_DIR}/APP_BASE")"

cd "${BUILD_DIR}"

echo "Generating Storybook build" | arrow

echo "Running lerna bootstrap for ${APP_BASE}" | indent
lerna bootstrap --scope="${APP_BASE}" --include-filtered-dependencies

echo "Running lerna build for ${APP_BASE}" | indent
lerna run build --scope="${APP_BASE}" --include-filtered-dependencies --stream

echo "Running build-storybook for ${APP_BASE}"
lerna run build-storybook --scope="${APP_BASE}" --stream

echo "Copying static Storybook files to root" | arrow
(
    mv "${BUILD_DIR}/${APP_BASE}/storybook-static" "${STAGE}" &&
    rm -rf "${BUILD_DIR}" &&
    mv "${STAGE}/storybook-static" "${BUILD_DIR}/build"
)

echo "Success!" | arrow