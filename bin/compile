#!/usr/bin/env bash
set -e

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}
BP_DIR=$(cd "$(dirname "${0:-}")"; cd ..; pwd)
STAGE="$(mktemp -d)"

LOG_FILE=$(mktemp -t node-build-log.XXXXX)
echo "" > "$LOG_FILE"

# shellcheck source=lib/output.sh
source "$BP_DIR/lib/output.sh"

if [ ! -f "${ENV_DIR}/APP_BASE" ]; then
    error "APP_BASE was not set. Aborting"
    exit 1
fi

APP_BASE="$(cat "${ENV_DIR}/APP_BASE")"

cd "${BUILD_DIR}"

header "Installing dependencies (lerna bootstrap)" | output "$LOG_FILE"
lerna bootstrap --scope="${APP_BASE}" --include-filtered-dependencies 2>&1 | output "$LOG_FILE"

header "Building ${APP_BASE} and its dependencies" | output "$LOG_FILE"
lerna run build --scope="${APP_BASE}" --include-filtered-dependencies --stream 2>&1 | output "$LOG_FILE"

header "Building storybook" | output "$LOG_FILE"
lerna run build-storybook --scope="${APP_BASE}" --stream

header "Copying static Storybook files to root" | output "$LOG_FILE"

mv "${BUILD_DIR}/${APP_BASE}/storybook-static" "${STAGE}" &&
rm -rf "${BUILD_DIR}" &&
mv "${STAGE}/storybook-static" "${BUILD_DIR}/build"

header "Success!" | output "$LOG_FILE"