#!/usr/bin/env bash
set -e

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}
BP_DIR=$(cd "$(dirname "${0:-}")"; cd ..; pwd)
STAGE="$(mktemp -d)"

LOG_FILE=$(mktemp -t node-build-log.XXXXX)
echo "" > "$LOG_FILE"

# shellcheck source=lib/output.sh
source "$BP_DIR/lib/output.sh"
# shellcheck source=lib/monitor.sh
source "$BP_DIR/lib/monitor.sh"

if [ ! -f "${ENV_DIR}/APP_BASE" ]; then
    error "APP_BASE was not set. Aborting"
    exit 1
fi

APP_BASE="$(cat "${ENV_DIR}/APP_BASE")"

cd "${BUILD_DIR}"

header "Generating Storybook build" | output "$LOG_FILE"

info "Running lerna bootstrap for ${APP_BASE}"
lerna bootstrap --scope="${APP_BASE}" --include-filtered-dependencies | output "$LOG_FILE"

info "Running lerna build for ${APP_BASE}"
lerna run build --scope="${APP_BASE}" --include-filtered-dependencies --stream | output "$LOG_FILE"

info "Running build-storybook for ${APP_BASE}"
lerna run build-storybook --scope="${APP_BASE}" --stream | output "$LOG_FILE"

header "Copying static Storybook files to root" | output "$LOG_FILE"

mv "${BUILD_DIR}/${APP_BASE}/storybook-static" "${STAGE}" &&
rm -rf "${BUILD_DIR}" &&
mv "${STAGE}/storybook-static" "${BUILD_DIR}/build"

header "Success!" | output "$LOG_FILE"